<p id="notice"><%= notice %></p>

<h1>Tareas</h1>

<br>
<div class="container">
  <div class="row">
    <% @tasks.each_slice(3) do |row| %>
      <% row.each do |task| %>
        <div class="col">
          <div class="card">
            <%= image_tag task.photo, class:'card-img-top' %>
            <div class="body">
              <h5> <%= task.name %> </h5>
              <%= link_to 'No Realizado', completed_path(task), class:'btn btn-primary' %>
              <%= link_to 'Show', task, class:'btn btn-info' %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top:20px"></div>
    <% end %>
  </div>
</div>
<%= link_to 'New Task', new_task_path %>
